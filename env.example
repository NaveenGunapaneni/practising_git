# =============================================================================
# GeoPulse Docker Environment Configuration
# =============================================================================
# Copy this file to .env and modify the values as needed

# =============================================================================
# SHARED DATA PATH CONFIGURATION
# =============================================================================
# Base path for all shared data, configuration, and output files
# This should be an absolute path on your host system
SHARED_DATA_PATH=/opt/geopulse/data

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=geopulse_db
POSTGRES_USER=geopulse_user
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_PORT=5433

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=8000
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
CORS_ALLOW_ORIGINS=http://localhost:3001,http://ui:3000,http://yourdomain.com
LOG_LEVEL=INFO

# =============================================================================
# UI CONFIGURATION
# =============================================================================
UI_PORT=3001
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_BASE_URL=http://api:8000

# =============================================================================
# PGADMIN CONFIGURATION
# =============================================================================
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@geopulse.com
PGADMIN_PASSWORD=your_secure_pgadmin_password_here

# =============================================================================
# SENTINEL HUB CONFIGURATION (Optional)
# =============================================================================
# SENTINEL_HUB_CLIENT_ID=your_sentinel_hub_client_id
# SENTINEL_HUB_CLIENT_SECRET=your_sentinel_hub_client_secret
# SENTINEL_HUB_INSTANCE_ID=your_sentinel_hub_instance_id

# =============================================================================
# PRODUCTION SETTINGS (Uncomment for production)
# =============================================================================
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
